<h1>List of articles</h1>

<table>
  <tr>
    <th width = "150">Title</th>
    <th width = "250">Content</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.content %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>
