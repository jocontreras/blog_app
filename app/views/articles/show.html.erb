<div class = box>
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @article.content %>
  </p>
  <p>
    <strong>Written by:</strong>
    <%= @article.author %>
  </p>
</div>


<h3>Comments:</h3>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Email:</strong>
    <%= comment.email %>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>


<h2>Add a comment:</h2>
<div class = box>

<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
</div>
<% end %>

